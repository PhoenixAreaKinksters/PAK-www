@using PAK_www.Models.Admin
@model EventSearch

<table>
    <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>
    @if ((Model?.Events?.Count() ?? 0) > 0)
    {
        @foreach (var e in Model.Events)
        {
            <tr>
                <td>
                    @e.Title
                </td>
                <td>
                    @e.Date.ToString("yyyy-MM-dd")
                </td>
                <td>
                    <a asp-action="EditEvent" asp-controller="Admin" asp-route-Id="@e.EventId"
                       data-ajax="true"
                       data-ajax-method="GET"
                       data-ajax-mode="replace"
                       data-ajax-update="#editEventModal"
                       data-ajax-success="$('#editEventModal').appendTo('body').html(data).modal('show');">
                        Edit
                    </a>
                    <a asp-action="DeleteEvent" asp-controller="Admin" asp-route-Id="@e.EventId"
                       onclick = "return confirm('Are you sure you wish to delete this event?');"
                       data-ajax="true"
                       data-ajax-success="$('#eventSearchForm').submit();">
                        Delete
                    </a>
                </td>
            </tr>
        }
    }
</table>