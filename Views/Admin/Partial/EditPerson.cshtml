@using PAK_www.Models.Admin
@model EditPerson

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Editing Person</h5>
        </div>
        <form asp-action="EditPerson" asp-controller="Admin"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-update="#editPersonModal">
            <div class="modal-body">
                @await Html.PartialAsync("Partial/EditPersonForm", Model?.CurrentPerson)
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default">@(Model?.PersonId > 0 ? "Update" : "Create")</button>
                <button type="button" class="btn btn-secondary" onclick="$('#editPersonModal').modal('hide');">Close</button>
            </div>
        </form>

    </div>
</div>