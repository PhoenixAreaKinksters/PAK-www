@using PAK_www.Models.Admin
@model EditEvent

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Editing Event</h5>
        </div>
        <form asp-action="EditEvent" asp-controller="Admin"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-update="#editEventModal">
            <div class="modal-body">
                @await Html.PartialAsync("Partial/EditEventForm", Model?.CurrentEvent) 
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default">@(Model?.EventId > 0 ? "Update" : "Create")</button>
                <button type="button" class="btn btn-secondary" onclick="$('#editEventModal').modal('hide');">Close</button>
            </div>
        </form>

    </div>
</div>