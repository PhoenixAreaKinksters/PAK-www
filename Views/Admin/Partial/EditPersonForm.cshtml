@using PAK_www.Models.Shared
@model Person


@Html.HiddenFor(m => m.PersonId)
<div class="form-group">
    @Html.LabelFor(m => m.LegalName)
    @Html.TextBoxFor(m => m.LegalName)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.SceneName)
    @Html.TextBoxFor(m => m.SceneName)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Birthday)
    @Html.TextBoxFor(m => m.Birthday, "{0:yyyy-MM-dd}", new { type = "date" })
</div>
